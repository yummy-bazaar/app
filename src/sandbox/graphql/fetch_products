##
# 
#   use this query to iteratively fetch 250 products at a time until hasNextPage is null
#
##
query{
  shop{
    products(
      				first: 20
      				after: "eyJsYXN0X2lkIjo5ODk1MzIxMjgzLCJsYXN0X3ZhbHVlIjoiOTg5NTMyMTI4MyJ9"
    ){
      edges{
        node{
          id
          title
          vendor
          handle
        }
        cursor
      }
      pageInfo{
        hasPreviousPage
        hasNextPage
      }
    }
  }
}