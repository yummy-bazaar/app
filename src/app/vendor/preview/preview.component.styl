#preview
	margin-bottom: 2em
	border: .01em solid #D5D5D5
	height: 15em
	

#image-container
	height: 14.9em
	width: 100%
	overflow-x: hidden
	

#image
	height: 100%


#title-container
	display: table
	height: 100%
	width: 100%
	background-color: #FF9F02
	

#title
	display: table-cell
	vertical-align: middle
	color: #FFF
	font-size: 2em
	text-align: center
	

#description
	height: 5.8em
	width: 95%
	margin-bottom: .5em
	padding-top: 1.5em
	font-size: .70em


#description > *
	margin: 0


#description img
	display: none
	

product
	display: inline-block
	height: 10em
	width: 10em
	overflow-x: hidden
	

product:nth-child(2)
	margin-left: 2.5em
	margin-right: 2.5em
	



