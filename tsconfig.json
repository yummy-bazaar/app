{
	"compilerOptions": {
		"allowJs": true,
		"outDir": "dist/assets",
		"target": "ES5",
		"module": "commonjs",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"removeComments": false,
		"noImplicitAny": true,
		"lib": [ "es2015","es6", "es2016", "es2017", "dom" ],
		"suppressImplicitAnyIndexErrors": true,
		"noStrictGenericChecks": true
	},
    "include": [
        "src/**/*.ts"
    ],
	"exclude": [
		"node_modules/**/*",
		"src/app/api/**/*",
		"src/app/sandbox/**/*"
	]
}